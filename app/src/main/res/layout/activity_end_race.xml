<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".EndRaceActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/redWin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150px"
        android:id="@+id/winnerImage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winnerName"
        android:text="победил"
        android:layout_below="@id/winnerImage"

        android:layout_centerHorizontal="true"
        android:shadowColor="@color/yellow"
        android:shadowRadius="25"
        android:textAllCaps="true"
        android:textSize="24pt"
        android:layout_marginTop="150px"
        android:textColor="@color/red"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rateWinCount"
        android:text="+100000"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/winnerName"
        android:textSize="22pt"
        android:layout_marginTop="150px"/>

    <ImageView
        android:layout_width="700px"
        android:layout_height="450px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white"
        android:id="@+id/menuBtn"
        />
    <Button
        android:layout_width="700px"
        android:layout_height="450px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/menuBtn1"
        android:text="меню"
        android:textSize="28pt"
        android:shadowColor="@color/yellow"
        android:shadowRadius="25"
        android:textColor="@color/red"
        android:textAllCaps="true"
        android:textStyle="bold"/>

</RelativeLayout>