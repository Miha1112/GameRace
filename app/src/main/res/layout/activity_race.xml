<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".RaceActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/road_line"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/side_line"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/side_line"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:src="@drawable/finish"/>

        <com.odisey.gamerace.OutlineTextView
            android:id="@+id/finishText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="Финиш"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:textSize="34pt"
            android:textStyle="bold"
            android:layout_marginTop="40px"
            app:textStrokeColor="@color/yellow"
            app:textStrokeWidth="12sp"/>
            <com.odisey.gamerace.MovingSquaresView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/movingSquare"/>
    </RelativeLayout>

</RelativeLayout>